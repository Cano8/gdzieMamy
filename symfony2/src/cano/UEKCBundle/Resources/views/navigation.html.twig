<div class="navbar">
    <div class="uekNavbar">
        <img id="uekLogo" src="/images/uek-logo.png">
        <select class="cs-select cs-skin-rotate">
            <option value="1">UEK</option>
            <option value="2">AGH</option>
            <option value="3">UJ</option>
            <option value="4">PK</option>
            <option value="5">UR</option>
        </select>
    </div>

    {% if app.user %}
        <div>
            Jesteś zalogowany jako {{ app.user.username }} <a href="{{ path('fos_user_security_logout') }}"><button>Wyloguj się</button></a>
        </div>
    {% else %}
        <div>
            <div class="modal">
                <label for="modal-1">
                    <div class="modal-trigger">Zaloguj się</div>
                </label>
                <input class="modal-state" id="modal-1" type="checkbox" />
                <div class="modal-fade-screen">
                    <div class="modal-inner">
                        <div class="modal-close" for="modal-1"></div>
                        <h1>Zaloguj się</h1>
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <label>Login</label>
                            <input type="text" name="_username" required="required" />

                            <label>Hasło</label>
                            <input type="password" name="_password" required="required" />
                            <input type="hidden" name="_csrf_token" value="{{ fos_csrf_provider.generateCsrfToken('authenticate') }}" />
                            <button type="submit">Potwierdź</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


</div>

